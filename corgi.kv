<CaptureBox>:
	task_input: task_input
	orientation: 'horizontal'
	height: 5
	
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

	CaptureInput:
		id: task_input
		hint_text: 'Press enter to submit or shift+enter to enter another task'
		size_hint_x: 0.8
		multiline: True
		focus: True
		font_size: dp(24)
#		on_text_validate: root.on_submit(); app.stop()
		
	AsyncImage:
		size_hint_x: .08
		source: 'assets/smallcorgi.png'
		allow_stretch: True